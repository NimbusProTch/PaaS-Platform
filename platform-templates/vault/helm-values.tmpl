# HashiCorp Vault Helm Values
# Generated by InfraForge for {{ .Environment }} environment

global:
  enabled: true
  namespace: vault-{{ .Environment }}

injector:
  enabled: {{ .Values.injector.enabled }}
  replicas: {{ .Values.injector.replicas }}
  resources:
    requests:
      memory: {{ .Values.injector.resources.requests.memory }}
      cpu: {{ .Values.injector.resources.requests.cpu }}
    limits:
      memory: {{ .Values.injector.resources.limits.memory }}
      cpu: {{ .Values.injector.resources.limits.cpu }}

server:
  {{- if eq .Profile "dev" }}
  dev:
    enabled: true
    devRootToken: "infraforge-dev-root-token"
  {{- end }}
  
  ha:
    enabled: {{ .Values.server.ha.enabled }}
    replicas: {{ .Values.server.ha.replicas }}
    
    raft:
      enabled: {{ .Values.server.ha.raft.enabled }}
      setNodeId: true
      
      config: |
        ui = true
        
        listener "tcp" {
          tls_disable = 1
          address = "[::]:8200"
          cluster_address = "[::]:8201"
        }
        
        storage "raft" {
          path = "/vault/data"
        }
        
        service_registration "kubernetes" {}
  
  standalone:
    enabled: {{ .Values.server.standalone.enabled }}
    
    config: |
      ui = true
      
      listener "tcp" {
        tls_disable = 1
        address = "[::]:8200"
        cluster_address = "[::]:8201"
      }
      
      storage "file" {
        path = "/vault/data"
      }
  
  dataStorage:
    enabled: true
    size: {{ .Values.server.dataStorage.size }}
    storageClass: null
    accessMode: ReadWriteOnce
  
  resources:
    requests:
      memory: {{ .Values.server.resources.requests.memory }}
      cpu: {{ .Values.server.resources.requests.cpu }}
    limits:
      memory: {{ .Values.server.resources.limits.memory }}
      cpu: {{ .Values.server.resources.limits.cpu }}
  
  ingress:
    enabled: {{ .Values.server.ingress.enabled }}
    ingressClassName: nginx
    hosts:
      - host: vault-{{ .Environment }}.{{ .Tenant }}.local
        paths:
          - /
    annotations:
      nginx.ingress.kubernetes.io/backend-protocol: "HTTP"

ui:
  enabled: true
  serviceType: ClusterIP